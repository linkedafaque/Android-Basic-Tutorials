<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.afaqueahmad.implicitintents.MainActivity">

    <Button
        android:id="@+id/launchMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="21dp"
        android:onClick="process"
        android:text="Launch Map" />

    <Button
        android:id="@+id/launchMarket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/launchMap"
        android:layout_alignStart="@+id/launchMap"
        android:layout_below="@+id/launchMap"
        android:layout_marginTop="27dp"
        android:onClick="process"
        android:text="Launch Market" />

    <Button
        android:id="@+id/sendEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/launchMarket"
        android:layout_alignStart="@+id/launchMarket"
        android:layout_below="@+id/launchMarket"
        android:layout_marginTop="27dp"
        android:onClick="process"
        android:text="Send Email" />

    <Button
        android:id="@+id/sendImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sendEmail"
        android:layout_alignStart="@+id/sendEmail"
        android:layout_below="@+id/sendEmail"
        android:layout_marginTop="32dp"
        android:onClick="process"
        android:text="Send Image" />

    <Button
        android:id="@+id/sendImages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sendImage"
        android:layout_alignStart="@+id/sendImage"
        android:layout_below="@+id/sendImage"
        android:layout_marginTop="32dp"
        android:onClick="process"
        android:text="Send Images" />

</RelativeLayout>
