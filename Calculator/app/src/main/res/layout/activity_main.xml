<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/mainRedBox"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.afaqueahmad.calculator.MainActivity"
    android:orientation="vertical"
    android:background="#000">

    <LinearLayout
        android:layout_weight="3"
        android:id="@+id/bigGreenBox"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:background="#000"
        android:layout_margin="20dp"
        android:padding="40dp">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_weight="14"
            android:layout_gravity="center" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="X"
            android:layout_weight="1"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="7"
        android:background="#000"
        android:id="@+id/bigBlueBox"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <LinearLayout
            android:id="@+id/orangeBox1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#000"
            android:layout_weight="5"
            android:orientation="vertical">
            
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="sin"
                android:layout_margin="2dp"
                android:layout_weight="1"
                style="@style/gangnamStyle"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="cos"
                android:layout_weight="1"
                android:layout_margin="2dp"
                style="@style/gangnamStyle"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="tan"
                android:layout_weight="1"
                android:layout_margin="2dp"
                style="@style/gangnamStyle"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Â¶"
                android:layout_weight="1"
                android:layout_margin="2dp"
                style="@style/gangnamStyle"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="!"
                android:layout_weight="1"
                android:layout_margin="2dp"
                style="@style/gangnamStyle"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/orangeBox2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#000"
            android:layout_weight="5"
            android:orientation="vertical"
            android:layout_marginRight="20dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="ln"
                android:layout_weight="1"
                android:layout_margin="2dp"
                style="@style/gangnamStyle"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="log"
                android:layout_weight="1"
                android:layout_margin="2dp"
                style="@style/gangnamStyle"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="e"
                android:layout_weight="1"
                android:layout_margin="2dp"
                style="@style/gangnamStyle"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="^"
                android:layout_weight="1"
                android:layout_margin="2dp"
                style="@style/gangnamStyle"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="sqrt"
                android:layout_weight="1"
                android:layout_margin="2dp"
                style="@style/gangnamStyle"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/blackBox"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="21"
            android:background="#000">

            <LinearLayout
                android:id="@+id/greenBox1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:background="#000"
                android:layout_weight="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="7"
                    style="@style/gangnamLight"
                    android:layout_margin="2dp"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="8"
                    style="@style/gangnamLight"
                    android:layout_margin="2dp"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="9"
                    style="@style/gangnamLight"
                    android:layout_margin="2dp"
                    android:layout_weight="1"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="/"
                    style="@style/gangnamStyle2"
                    android:layout_margin="2dp"
                    android:layout_weight="1"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="("
                    style="@style/gangnamStyle2"
                    android:layout_margin="2dp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/greenBox2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:background="#000"
                android:layout_weight="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="4"
                    style="@style/gangnamLight"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="5"
                    style="@style/gangnamLight"
                    android:layout_margin="2dp"
                    android:layout_weight="1"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="6"
                    style="@style/gangnamLight"
                    android:layout_margin="2dp"
                    android:layout_weight="1"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="X"
                    style="@style/gangnamStyle2"
                    android:layout_margin="2dp"
                    android:layout_weight="1"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text=")"
                    style="@style/gangnamStyle2"
                    android:layout_margin="2dp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/blueBox"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:background="#000"
                android:layout_weight="2">
                
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#000"
                    android:layout_weight="4"
                    android:orientation="vertical">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="1"
                            style="@style/gangnamLight"
                            android:layout_margin="2dp"
                            android:layout_weight="1"/>

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="2"
                            style="@style/gangnamLight"
                            android:layout_margin="2dp"
                            android:layout_weight="1"/>

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="3"
                            style="@style/gangnamLight"
                            android:layout_margin="2dp"
                            android:layout_weight="1"/>

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="-"
                            style="@style/gangnamStyle2"
                            android:layout_margin="2dp"
                            android:layout_weight="1"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="0"
                            style="@style/gangnamLight"
                            android:layout_margin="2dp"
                            android:layout_weight="2"/>

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="."
                            style="@style/gangnamLight"
                            android:layout_margin="2dp"
                            android:layout_weight="1"/>

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="+"
                            style="@style/gangnamStyle2"
                            android:layout_margin="2dp"
                            android:layout_weight="1"/>

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="="
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    style="@style/gangnamStyle2"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
